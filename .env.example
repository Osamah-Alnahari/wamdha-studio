# Amplify / AppSync Configuration
NEXT_PUBLIC_AWS_APPSYNC_GRAPHQL_ENDPOINT="https://<your-appsync-endpoint>.appsync-api.<your-region>.amazonaws.com/graphql" # AppSync API URL, safe to expose
NEXT_PUBLIC_AWS_APPSYNC_REGION="<your-region>" # AWS region of AppSync
NEXT_PUBLIC_AWS_APPSYNC_AUTHENTICATION_TYPE="<your-authentication-type>" # e.g., AMAZON_COGNITO_USER_POOLS

# Cognito Authentication
NEXT_PUBLIC_AWS_COGNITO_REGION="<your-region>" # Cognito region
NEXT_PUBLIC_AWS_USER_POOLS_ID="<your-user-pool-id>" # User Pool ID, public identifier
NEXT_PUBLIC_AWS_USER_POOLS_WEB_CLIENT_ID="<your-user-pool-web-client-id>" # App client ID, safe to expose
NEXT_PUBLIC_AWS_COGNITO_IDENTITY_POOL_ID="<your-identity-pool-id>" # Identity Pool ID, public

# S3 Storage
NEXT_PUBLIC_AWS_USER_FILES_S3_BUCKET="<your-s3-bucket-name>" # S3 bucket name
NEXT_PUBLIC_AWS_USER_FILES_S3_BUCKET_REGION="<your-region>" # Bucket region
